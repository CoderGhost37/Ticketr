{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
    "lineWidth": 100,
    "ignore": [
      "node_modules",
      ".next",
      "dist"
    ]
	},
	"organizeImports": {
    "enabled": true,
    "ignore": [
      "node_modules",
      ".next",
      "dist"
    ]
  },
	"linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noSvgWithoutTitle": "off"
      },
      "correctness": {
        "noUnusedVariables": "warn",
        "useExhaustiveDependencies": "off",
        "noUnusedImports": "warn"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      },
      "style": {
        "useBlockStatements": "error",
        "noNonNullAssertion": "off"
      },
      "performance": {
        "noDelete": "off"
      },
      "suspicious": {
        "noArrayIndexKey": "off",
        "noExplicitAny": "off",
        "noConsoleLog": "warn"
      },
      "complexity": {
        "noForEach": "off"
      }
    },
    "ignore": [
      ".vitest",
      "node_modules",
      ".next",
      "dist",
      ".nuxt",
      "./packages/api/src/openapi.d.ts",
      ".wrangler",
      ".react-email",
      ".contentlayer"
    ]
  },
	"javascript": {
		"formatter": {
			"trailingCommas": "es5",
			"semicolons": "asNeeded",
			"quoteStyle": "double"
		}
	}
}
